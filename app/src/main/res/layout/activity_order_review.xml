<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    android:windowSoftInputMode="adjustPan|adjustResize"

    tools:context=".ActivityOrderReview">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:id="@+id/svdetails"
        android:visibility="visible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:text="DELIVERY ADDRESS"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imgeditorderaddress"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_baseline_edit_24" />

                    <View
                        android:id="@+id/viewLineBilling"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/imgeditorderaddress"
                        android:layout_marginTop="7dp"
                        android:background="#E0E0E0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/viewLineBilling"
                        android:layout_marginTop="7dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtbillingname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="15dp"
                            android:text="NAME"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/txtbillingaddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:paddingLeft="15dp"
                            android:paddingTop="8dp"
                            android:text="ADDRESS"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/txtbillingmonumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:paddingLeft="15dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="7600898872"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="PRICE DETAILS"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/imgeditorderaddress"
                        android:layout_marginTop="7dp"
                        android:background="#E0E0E0" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="SubTotal"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txtsubtotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:maxLines="2"
                            android:paddingStart="12dp"
                            android:paddingLeft="12dp"
                            android:paddingEnd="17dp"
                            android:paddingRight="17dp"
                            android:text="12454299"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Shipping Charge"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txtshipingcharg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:maxLines="2"
                            android:paddingStart="12dp"
                            android:paddingLeft="12dp"
                            android:paddingEnd="17dp"
                            android:paddingRight="17dp"
                            android:text="12454212"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/coupondiscount"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Coupon Discount"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txtcoupondis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:maxLines="2"
                            android:paddingStart="12dp"
                            android:paddingLeft="12dp"
                            android:paddingEnd="17dp"
                            android:paddingRight="17dp"
                            android:text="12454212"
                            android:textColor="#4EC821"
                            android:textSize="15sp" />
                    </LinearLayout>
                   <!-- <RelativeLayout
                        android:id="@+id/relgroceryonclickWallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="6dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/kisahnWalletCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
